---
// src/components/header/Navigation.astro
// Define the props
export interface Props {
  isMobile?: boolean;
}

// Define navigation items
const navItems = [
  { text: "Features", href: "/features" },
  { text: "Pricing", href: "/pricing" },
  { text: "About", href: "/about" },
  { text: "Support", href: "/support" },
];

const { isMobile = false } = Astro.props;
---

<nav class={isMobile ? "flex flex-col items-center gap-8" : "flex items-center space-x-8"}>
  {
    navItems.map((item) => (
      <a
        href={item.href}
        class={
          isMobile
            ? "text-xl font-medium text-white hover:text-indigo-300 transition-colors duration-200"
            : "text-sm font-medium text-white hover:text-indigo-300 transition-all duration-200 relative group"
        }
      >
        {/* Desktop underline effect */}
        {!isMobile && (
          <span class="absolute bottom-[-4px] left-0 w-0 h-0.5 bg-indigo-300 transition-all duration-200 group-hover:w-full"></span>
        )}
        
        {item.text}
      </a>
    ))
  }
</nav>