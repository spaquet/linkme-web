---
import Container from "../common/Container.astro";
import Button from "../common/Button.astro";
---

<section class="pt-28 pb-20 md:pt-36 md:pb-28 bg-gradient-to-b from-indigo-50 to-white dark:from-gray-900 dark:to-gray-800">
  <Container>
    <div class="flex flex-col lg:flex-row gap-12 lg:gap-16 items-center">
      <!-- Hero content -->
      <div class="flex-1 text-center lg:text-left">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900 dark:text-white mb-6">
          Connect, <span class="text-indigo-600 dark:text-indigo-400">Track</span> & Grow Your Network
        </h1>
        <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto lg:mx-0">
          LinkMe helps you build meaningful connections, organize your contacts, and leverage AI to understand who in your network can help you achieve your goals.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <Button href="https://apps.apple.com/app/linkme" variant="primary" size="lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71,19.5C17.88,20.74 17,21.95 15.66,21.97C14.32,22 13.89,21.18 12.37,21.18C10.84,21.18 10.37,21.95 9.1,22C7.79,22.05 6.8,20.68 5.96,19.47C4.25,17 2.94,12.45 4.7,9.39C5.57,7.87 7.13,6.91 8.82,6.88C10.1,6.86 11.32,7.75 12.11,7.75C12.89,7.75 14.37,6.68 15.92,6.84C16.57,6.87 18.39,7.1 19.56,8.82C19.47,8.88 17.39,10.1 17.41,12.63C17.44,15.65 20.06,16.66 20.09,16.67C20.06,16.74 19.67,18.11 18.71,19.5M13,3.5C13.73,2.67 14.94,2.04 15.94,2C16.07,3.17 15.6,4.35 14.9,5.19C14.21,6.04 13.07,6.7 11.95,6.61C11.8,5.46 12.36,4.26 13,3.5Z" />
            </svg>
            Download on iOS
          </Button>
          <Button href="https://getlinkme.io/signup/" variant="outline" size="lg">
            Sign Up on Web
          </Button>
        </div>
        
        <!-- Social proof -->
        <div class="mt-10 text-center lg:text-left">
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Trusted by professionals from:</p>
          <div class="flex flex-wrap justify-center lg:justify-start gap-6">
            <img src="/images/logos/company-1.svg" alt="Company logo" class="h-6 grayscale opacity-70 hover:grayscale-0 hover:opacity-100 transition-all duration-300" />
            <img src="/images/logos/company-2.svg" alt="Company logo" class="h-6 grayscale opacity-70 hover:grayscale-0 hover:opacity-100 transition-all duration-300" />
            <img src="/images/logos/company-3.svg" alt="Company logo" class="h-6 grayscale opacity-70 hover:grayscale-0 hover:opacity-100 transition-all duration-300" />
            <img src="/images/logos/company-4.svg" alt="Company logo" class="h-6 grayscale opacity-70 hover:grayscale-0 hover:opacity-100 transition-all duration-300" />
          </div>
        </div>
      </div>
      
      <!-- Hero image -->
      <div class="flex-1 relative">
        <div class="relative z-10 rounded-xl shadow-2xl overflow-hidden">
          <img 
            src="/images/hero/app-screenshot.png" 
            alt="LinkMe App Interface" 
            class="w-full h-auto"
            width="560"
            height="1200"
          />
        </div>
        <!-- Decorative elements -->
        <div class="absolute top-1/2 -translate-y-1/2 -right-16 w-64 h-64 bg-indigo-500 bg-opacity-20 rounded-full filter blur-3xl"></div>
        <div class="absolute bottom-1/4 -left-8 w-40 h-40 bg-indigo-500 bg-opacity-20 rounded-full filter blur-2xl"></div>
      </div>
    </div>
  </Container>
</section>