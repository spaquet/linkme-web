---
import Container from "../common/Container.astro";
import Button from "../common/Button.astro";
---

<section class="py-16 md:py-24 bg-indigo-600 dark:bg-indigo-900 relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-indigo-700 rounded-full mix-blend-multiply filter blur-3xl opacity-20"></div>
  
  <Container>
    <div class="relative z-10 flex flex-col md:flex-row md:items-center md:justify-between gap-8 md:gap-12">
      <div class="md:max-w-lg">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Ready to transform how you network?
        </h2>
        <p class="text-gray-200 text-lg mb-8 md:mb-0">
          Download the LinkMe app today and start building meaningful connections that can help you achieve your goals.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 items-center">
        <a href="https://apps.apple.com/app/linkme">
          <img 
            src="/images/app-store-badge.svg" 
            alt="Download on the App Store" 
            class="h-12 w-auto hover:opacity-90 transition-opacity duration-300"
          />
        </a>
        <!-- <a href="https://play.google.com/store/apps/details?id=com.linkme.app" class="ml-4">
          <img 
            src="/images/play-store-badge.png" 
            alt="Get it on Google Play" 
            class="h-12 w-auto hover:opacity-90 transition-opacity duration-300"
          />
        </a> -->
        <Button href="https://getlinkme.io/signup/" variant="secondary" size="lg">
          Sign Up on Web
        </Button>
      </div>
    </div>
    
    <!-- App features summary -->
    <div class="relative z-10 mt-16 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
      <div class="bg-gray-800 bg-opacity-70 p-6 rounded-lg backdrop-blur-sm border border-gray-700/50">
        <div class="text-white text-lg font-bold mb-2">Digital Business Card</div>
        <p class="text-gray-100">Share your profile with anyone instantly via NFC, QR code, or link.</p>
      </div>
      
      <div class="bg-gray-800 bg-opacity-70 p-6 rounded-lg backdrop-blur-sm border border-gray-700/50">
        <div class="text-white text-lg font-bold mb-2">Contact Management</div>
        <p class="text-gray-100">Organize your connections with powerful tagging and filtering.</p>
      </div>
      
      <div class="bg-gray-800 bg-opacity-70 p-6 rounded-lg backdrop-blur-sm border border-gray-700/50">
        <div class="text-white text-lg font-bold mb-2">AI-Powered Insights</div>
        <p class="text-gray-100">Get smart recommendations for networking opportunities.</p>
      </div>
      
      <div class="bg-gray-800 bg-opacity-70 p-6 rounded-lg backdrop-blur-sm border border-gray-700/50">
        <div class="text-white text-lg font-bold mb-2">Marketing Automation</div>
        <p class="text-gray-100">Schedule follow-ups and nurture your professional relationships.</p>
      </div>
    </div>
  </Container>
</section>