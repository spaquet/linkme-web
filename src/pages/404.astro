---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Page Not Found | LinkMe"
  description="Sorry, we couldn't find the page you're looking for. Return to LinkMe's homepage to continue networking."
  canonicalURL={new URL("/404/", Astro.site)}
  pageType="website"
>
  <section class="min-h-screen flex items-center justify-center bg-white dark:bg-gray-900 py-16 md:py-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">404 - Page Not Found</h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
        Oops! The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-block bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-indigo-700 transition-colors"
      >
        Back to Homepage
      </a>
    </div>
  </section>
</Layout>