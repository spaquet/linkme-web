---
import Layout from "../layouts/Layout.astro";
import Container from "../components/common/Container.astro";
import Button from "../components/common/Button.astro";

const pageTitle = "Support Center";
const pageDescription = "Get help with LinkMe. Find resources, contact our support team, and troubleshoot common issues with our digital business card and networking platform.";

// Support categories with their respective items
const supportCategories = [
  {
    title: "Account & Profile",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
    </svg>`,
    items: [
      { title: "Managing your profile", link: "/support/managing-your-profile" },
      { title: "Account security", link: "/support/account-security" },
      { title: "Changing your email or password", link: "/support/changing-credentials" },
      { title: "Deleting your account", link: "/support/delete-account" }
    ]
  },
  {
    title: "Digital Business Card",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
    </svg>`,
    items: [
      { title: "Creating your digital card", link: "/support/creating-digital-card" },
      { title: "Customizing your card design", link: "/support/customizing-card-design" },
      { title: "Sharing your card via QR code", link: "/support/sharing-via-qr" },
      { title: "Using NFC to share your card", link: "/support/using-nfc" }
    ]
  },
  {
    title: "Contact Management",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`,
    items: [
      { title: "Organizing your contacts", link: "/support/organizing-contacts" },
      { title: "Adding tags and notes", link: "/support/tags-and-notes" },
      { title: "Exporting contact data", link: "/support/exporting-contacts" },
      { title: "Setting up follow-up reminders", link: "/support/follow-up-reminders" }
    ]
  },
  {
    title: "Billing & Subscription",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
    </svg>`,
    items: [
      { title: "Managing your subscription", link: "/support/managing-subscription" },
      { title: "Billing inquiries", link: "/support/billing-inquiries" },
      { title: "Upgrading your plan", link: "/support/upgrading-plan" },
      { title: "Payment methods", link: "/support/payment-methods" }
    ]
  },
  {
    title: "Mobile App",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
    </svg>`,
    items: [
      { title: "iOS app installation", link: "/support/ios-installation" },
      { title: "Troubleshooting common app issues", link: "/support/app-troubleshooting" },
      { title: "Using app while offline", link: "/support/offline-mode" },
      { title: "App permissions explained", link: "/support/app-permissions" }
    ]
  },
  {
    title: "Integrations",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
    </svg>`,
    items: [
      { title: "CRM integrations", link: "/support/crm-integrations" },
      { title: "Email platform connections", link: "/support/email-integrations" },
      { title: "Calendar integrations", link: "/support/calendar-integrations" },
      { title: "API documentation", link: "/support/api-docs" }
    ]
  }
];

// Support options for direct help
const contactOptions = [
  {
    title: "Email Support",
    description: "Send us an email and we'll get back to you within 24 hours on business days.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>`,
    action: "Email Us",
    link: "mailto:support@getlinkme.app"
  },
  {
    title: "Support Ticket",
    description: "Submit a support ticket for complex issues requiring detailed assistance.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
    </svg>`,
    action: "Submit Ticket",
    link: "/support/submit-ticket"
  },
  {
    title: "Live Chat",
    description: "Available Monday to Friday, 9am-5pm EST for immediate assistance.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
    </svg>`,
    action: "Start Chat",
    link: "/support/live-chat"
  }
];

// Quick help links
const quickLinks = [
  { title: "Reset Password", link: "/support/reset-password" },
  { title: "Cancel Subscription", link: "/support/cancel-subscription" },
  { title: "Recover Deleted Contact", link: "/support/recover-contact" },
  { title: "Request Data Export", link: "/support/data-export" },
  { title: "Report a Bug", link: "/support/report-bug" },
  { title: "Request a Feature", link: "/support/feature-request" }
];

// System status data - in a real implementation, this would be dynamically fetched
const systemStatus = {
  operational: true,
  lastUpdated: "April 26, 2025 10:23 AM EST",
  components: [
    { name: "Web Application", status: "operational" },
    { name: "iOS Application", status: "operational" },
    { name: "API Services", status: "operational" },
    { name: "Authentication System", status: "operational" }
  ],
  scheduledMaintenance: {
    scheduled: true,
    date: "April 28, 2025",
    time: "2:00 AM - 4:00 AM EST",
    description: "Scheduled database optimization may cause brief service interruptions."
  }
};
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  canonicalURL={new URL("/support/", Astro.site)}
  pageType="website">
  
  <!-- Hero Section -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-24 bg-gradient-to-b from-indigo-50 to-white dark:from-gray-900 dark:to-gray-800">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          How Can We Help You?
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
          Find solutions, get support, and make the most of your LinkMe experience.
        </p>
        
        <!-- Search Bar -->
        <div class="relative max-w-2xl mx-auto">
          <input
            type="text"
            placeholder="Search for help articles, topics, or questions..."
            class="w-full px-6 py-4 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
          />
          <button
            class="absolute right-4 top-1/2 -translate-y-1/2 text-indigo-600 dark:text-indigo-400"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
        
        <!-- Quick Links -->
        <div class="mt-8">
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-3">Popular help topics:</p>
          <div class="flex flex-wrap justify-center gap-2">
            {quickLinks.map((link) => (
              <a
                href={link.link}
                class="inline-block px-4 py-2 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm transition-colors duration-200"
              >
                {link.title}
              </a>
            ))}
          </div>
        </div>
      </div>
    </Container>
  </section>
  
  <!-- Contact Options Section -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Get in Touch
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Need personalized help? Our support team is ready to assist you.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {contactOptions.map((option) => (
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg text-center hover:shadow-md transition-shadow duration-300">
            <div class="w-12 h-12 mx-auto bg-indigo-100 dark:bg-indigo-900 rounded-full flex items-center justify-center text-indigo-600 dark:text-indigo-400 mb-4">
              <Fragment set:html={option.icon} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
              {option.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6">
              {option.description}
            </p>
            <a
              href={option.link}
              class="inline-block px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200"
            >
              {option.action}
            </a>
          </div>
        ))}
      </div>
    </Container>
  </section>
  
  <!-- Help Categories Section -->
  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-800">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Support Categories
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Browse our comprehensive knowledge base by topic.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {supportCategories.map((category) => (
          <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-sm">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-indigo-100 dark:bg-indigo-900 rounded-lg flex items-center justify-center text-indigo-600 dark:text-indigo-400 mr-3">
                <Fragment set:html={category.icon} />
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                {category.title}
              </h3>
            </div>
            <ul class="space-y-2">
              {category.items.map((item) => (
                <li>
                  <a
                    href={item.link}
                    class="flex items-center text-gray-600 dark:text-gray-300 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors duration-200"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
            <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-800">
              <a
                href={`/support/categories/${category.title.toLowerCase().replace(/ /g, "-")}`}
                class="text-indigo-600 dark:text-indigo-400 hover:underline text-sm font-medium"
              >
                View all {category.title} articles →
              </a>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </section>
  
  <!-- Video Tutorials Section -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Video Tutorials
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Watch step-by-step guides to make the most of LinkMe's features.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- These would be actual video thumbnails in production -->
        <div class="bg-gray-100 dark:bg-gray-800 rounded-lg overflow-hidden">
          <div class="aspect-video bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
            <p class="text-gray-600 dark:text-gray-300">[Getting Started Video]</p>
          </div>
          <div class="p-4">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">
              Getting Started with LinkMe
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              A complete walkthrough of setting up your account and creating your first digital business card.
            </p>
          </div>
        </div>
        
        <div class="bg-gray-100 dark:bg-gray-800 rounded-lg overflow-hidden">
          <div class="aspect-video bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
            <p class="text-gray-600 dark:text-gray-300">[Advanced Features Video]</p>
          </div>
          <div class="p-4">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">
              Advanced Contact Management
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Learn how to organize your contacts using tags, notes, and follow-up reminders.
            </p>
          </div>
        </div>
        
        <div class="bg-gray-100 dark:bg-gray-800 rounded-lg overflow-hidden">
          <div class="aspect-video bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
            <p class="text-gray-600 dark:text-gray-300">[App Walkthrough Video]</p>
          </div>
          <div class="p-4">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">
              Using the LinkMe Mobile App
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Discover how to use all features of the LinkMe mobile app, including NFC sharing.
            </p>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-8">
        <a
          href="/support/video-tutorials"
          class="inline-block px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200"
        >
          View All Tutorials
        </a>
      </div>
    </Container>
  </section>
  
  <!-- System Status Section -->
  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-800">
    <Container>
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            System Status
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300">
            Check the current status of LinkMe services and systems.
          </p>
        </div>
        
        <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-sm">
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center">
              <div class={`w-4 h-4 rounded-full ${systemStatus.operational ? 'bg-green-500' : 'bg-red-500'} mr-2`}></div>
              <span class="font-medium text-gray-900 dark:text-white">
                {systemStatus.operational ? 'All Systems Operational' : 'System Disruption Detected'}
              </span>
            </div>
            <span class="text-sm text-gray-500 dark:text-gray-400">
              Last updated: {systemStatus.lastUpdated}
            </span>
          </div>
          
          <div class="space-y-4 mb-6">
            {systemStatus.components.map((component) => (
              <div class="flex items-center justify-between pb-3 border-b border-gray-100 dark:border-gray-800">
                <span class="text-gray-700 dark:text-gray-300">{component.name}</span>
                <div class="flex items-center">
                  <div class={`w-3 h-3 rounded-full ${component.status === 'operational' ? 'bg-green-500' : 'bg-red-500'} mr-2`}></div>
                  <span class="text-sm capitalize">{component.status}</span>
                </div>
              </div>
            ))}
          </div>
          
          {systemStatus.scheduledMaintenance.scheduled && (
            <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
              <h3 class="text-lg font-medium text-blue-800 dark:text-blue-400 mb-2">
                Scheduled Maintenance
              </h3>
              <p class="text-blue-700 dark:text-blue-300 mb-1">
                <span class="font-medium">When:</span> {systemStatus.scheduledMaintenance.date}, {systemStatus.scheduledMaintenance.time}
              </p>
              <p class="text-blue-700 dark:text-blue-300">
                <span class="font-medium">Details:</span> {systemStatus.scheduledMaintenance.description}
              </p>
            </div>
          )}
          
          <div class="text-center mt-6">
            <a
              href="/support/status-history"
              class="text-indigo-600 dark:text-indigo-400 hover:underline text-sm font-medium"
            >
              View System Status History →
            </a>
          </div>
        </div>
      </div>
    </Container>
  </section>
  
  <!-- Community Section -->
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Join Our Community
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Connect with other LinkMe users, share tips, and get help from the community.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg text-center hover:shadow-md transition-shadow duration-300">
          <div class="w-12 h-12 mx-auto bg-indigo-100 dark:bg-indigo-900 rounded-full flex items-center justify-center text-indigo-600 dark:text-indigo-400 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
            Community Forum
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            Ask questions, share your experiences, and learn from other LinkMe users in our community forum.
          </p>
          <a
            href="/community/forum"
            class="inline-block px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200"
          >
            Visit Forum
          </a>
        </div>
        
        <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg text-center hover:shadow-md transition-shadow duration-300">
          <div class="w-12 h-12 mx-auto bg-indigo-100 dark:bg-indigo-900 rounded-full flex items-center justify-center text-indigo-600 dark:text-indigo-400 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
            Webinars & Events
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            ```astro
            Join our live webinars and events to learn advanced features, networking strategies, and get your questions answered by our team.
          </p>
          <a
            href="/community/events"
            class="inline-block px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200"
          >
            View Schedule
          </a>
        </div>
      </div>
      
      <div class="flex justify-center mt-8 space-x-4">
        <a href="https://twitter.com/linkmeapp" class="text-gray-500 hover:text-indigo-600 dark:text-gray-400 dark:hover:text-indigo-400 transition-colors duration-200">
