---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/sections/Hero.astro";
import Features from "../components/sections/Features.astro";
import HowItWorks from "../components/sections/HowItWorks.astro";
import Testimonials from "../components/sections/Testimonials.astro";
import Pricing from "../components/sections/Pricing.astro";
import CallToAction from "../components/sections/CallToAction.astro";

// SEO metadata
const title = "LinkMe - Connect, Track & Grow Your Network";
const description = "LinkMe helps you build meaningful connections, organize your contacts, and leverage AI to understand who in your network can help you achieve your goals.";
---

<Layout 
  title={title} 
  description={description}
  image="/images/social-preview.jpg"
  canonicalURL={new URL("/", Astro.site)}
  pageType="website"
  publishedTime={undefined}
  author="LinkMe"
  tags={[]}>
  <Hero />
  <Features />
  <HowItWorks />
  <Testimonials />
  <Pricing />
  <CallToAction />
</Layout>