---
import Layout from "../layouts/Layout.astro";
import Container from "../components/common/Container.astro";

const pageTitle = "About LinkMe";
const pageDescription = "Learn about LinkMe, the all-in-one networking platform that helps you build meaningful professional relationships with digital business cards and smart contact management.";

const teamMembers = [
  {
    name: "Jane Doe",
    role: "Founder & CEO",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>`,
  },
  {
    name: "John Smith",
    role: "CTO",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>`,
  },
];
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  canonicalURL={new URL("/about/", Astro.site)}
  pageType="website">
  <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
    <Container>
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
          About LinkMe
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-12 prose dark:prose-invert">
          At LinkMe, we’re redefining professional networking by making it authentic, seamless, and meaningful. Our mission is to help you build lasting relationships with the people you meet—whether in person or online—through innovative digital business cards, smart contact management, and AI-driven tools.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <div class="bg-gray-50 dark:bg-gray-800 p-8 rounded-lg shadow-sm">
          <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900 rounded-lg flex items-center justify-center text-indigo-600 dark:text-indigo-400 mb-6">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Our Mission</h2>
          <p class="text-gray-600 dark:text-gray-300">
            To empower professionals to connect authentically and stay engaged with their network through intuitive, modern tools that bridge the physical and digital worlds.
          </p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 p-8 rounded-lg shadow-sm">
          <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900 rounded-lg flex items-center justify-center text-indigo-600 dark:text-indigo-400 mb-6">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Our Vision</h2>
          <p class="text-gray-600 dark:text-gray-300">
            To create a world where every professional interaction is meaningful, memorable, and effortlessly managed, fostering collaboration and growth.
          </p>
        </div>
      </div>

      <div class="mb-16">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white text-center mb-8">
          Meet the Team
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {teamMembers.map((member) => (
            <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg shadow-sm text-center">
              <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900 rounded-lg flex items-center justify-center text-indigo-600 dark:text-indigo-400 mx-auto mb-4">
                <Fragment set:html={member.icon} />
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">{member.name}</h3>
              <p class="text-gray-600 dark:text-gray-300">{member.role}</p>
            </div>
          ))}
        </div>
      </div>

      <div class="text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-8">
          See LinkMe in Action
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-gray-200 dark:bg-gray-700 rounded-lg h-64 flex items-center justify-center">
            <p class="text-gray-600 dark:text-gray-300">[Placeholder: App Screenshot - Digital Business Card]</p>
          </div>
          <div class="bg-gray-200 dark:bg-gray-700 rounded-lg h-64 flex items-center justify-center">
            <p class="text-gray-600 dark:text-gray-300">[Placeholder: App Screenshot - Contact Management]</p>
          </div>
          <div class="bg-gray-200 dark:bg-gray-700 rounded-lg h-64 flex items-center justify-center">
            <p class="text-gray-600 dark:text-gray-300">[Placeholder: App Screenshot - Follow-Up Automation]</p>
          </div>
        </div>
        <a
          href="https://getlinkme.app"
          class="mt-8 inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 transition-colors"
        >
          Try LinkMe Now
        </a>
      </div>
    </Container>
  </section>
</Layout>